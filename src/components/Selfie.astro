---
import { Image } from 'astro:assets';
import img1 from '/src/assets/page_images/jcc-selfie.jpg';
import img2 from '/src/assets/page_images/jcc-selfie2.jpg';
import img3 from '/src/assets/page_images/jcc-selfie3.jpg';
import img4 from '/src/assets/page_images/jcc-selfie4.jpg';
import img5 from '/src/assets/page_images/jcc-selfie5.jpg';
import img6 from '/src/assets/page_images/jcc-selfie6.jpg';
const arr = [img1, img2, img3, img4, img5, img6];
const RandomSelfie = arr[Math.floor(Math.random() * arr.length)];
---

<figure class="h-card">
  <Image
    src={RandomSelfie}
    alt="Stuart Mackenzie profile picture"
    class="u-photo"
  />
  <figcaption class="p-name">Stuart Mackenzie</figcaption>
  <a href="https://hellostu.xyz" class="u-url" style="display: none;"
    >hellostu.xyz</a
  >
</figure>
