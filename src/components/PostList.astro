---
const { posts, gridTitle } = Astro.props;
import PostPreview from './PostPreview.astro';
---

<section class="tag-post-list">
  <h2 class="content-padding">{gridTitle}</h2>
  <div class="content-padding">
    {
      posts.map(post => (
        <PostPreview url={'/posts/' + post.slug} data={post.data} />
      ))
    }
  </div>
</section>
