---
import { SEO } from 'astro-seo';
const { frontmatter, pageMeta } = Astro.props;
import Fonts from '../components/Fonts.astro';
---

<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.png" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <Fonts />
  <SEO
    title={pageMeta != undefined
      ? pageMeta.title
      : 'Hello Stu | ' + frontmatter.title}
    description={frontmatter !== undefined
      ? frontmatter.description
      : pageMeta.description}
    openGraph={{
      basic: {
        title: pageMeta != undefined ? pageMeta.title : frontmatter.title,
        type: frontmatter !== undefined ? 'article' : 'website',
        image:
          frontmatter !== undefined
            ? frontmatter.socialImage
            : pageMeta.imageUrl,
      },
      optional: {
        description:
          frontmatter !== undefined
            ? frontmatter.description
            : pageMeta.description,
      },
    }}
  />
</head>
